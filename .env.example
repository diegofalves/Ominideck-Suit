# OmniDeck Configuration

# Caminho raiz para dados de projetos e cadastros globais
# Padrão: ~/OmniDeck/data
OMNIDECK_DATA_PATH=~/OmniDeck/data

# Projeto ativo (pode ser setado dinamicamente pela UI)
# Formato: proj_<identificador>
# Se não definido, a UI pedirá para selecionar um projeto
OMNIDECK_ACTIVE_PROJECT=proj_bauducco_001

# Credenciais OTM (opcional - pode estar no cadastro do projeto)
# Se definidas aqui, serão usadas como fallback para variáveis de projeto
OTM_USERNAME=usuario.integracao
OTM_PASSWORD=sua_senha_otm_aqui

# Modo debug (apenas desenvolvimento)
OMNIDECK_DEBUG=false
